
<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2 class="mb-3">Add New Rental</h2>
            <form action="/rentals" method="POST" novalidate class="needs-validation">
                
                <!-- Title -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="rental[title]" class="form-control" placeholder="Enter the title (e.g., Spacious PG Near City Center)" required >
                    <div class="invalid-feedback">Please enter a title</div>
                </div>
                
                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="rental[description]" class="form-control" placeholder="Provide a description of the rental (e.g.,with library on walking distance,...)" required></textarea>
                    <div class="invalid-feedback">Please provide a description</div>
                </div>

                <!-- Location -->
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="address" class="form-label">Address:</label>
                        <input type="text" name="rental[location][address]" class="form-control" placeholder="Enter the full address" required>
                        <div class="invalid-feedback">Please provide an address</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="state" class="form-label">State:</label>
                        <input type="text" name="rental[location][state]" class="form-control" placeholder="Enter the state" required>
                        <div class="invalid-feedback">Please provide a state</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="pincode" class="form-label">Pincode:</label>
                        <input type="text" name="rental[location][pincode]" class="form-control" maxlength="6" pattern="\d{6}" placeholder="Enter 6 digit pincode" required>
                        <div class="invalid-feedback">Please provide a valid pincode</div>
                    </div>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label for="price" class="form-label">Price (per month):</label>
                    <!-- <input type="text" name="rental[price]" class="form-control" placeholder="Enter the price" required> -->
                    <input type="text" pattern="^[0-9]*\.?[0-9]+$" placeholder="Enter price" name="rental[price]" class="form-control" placeholder="Enter the price" required>
                    <div class="invalid-feedback">Please provide a valid price</div>
                </div>

                <!-- Property Type -->
                <div class="mb-3">
                    <label for="propertyType" class="form-label">Property Type:</label>
                    <select name="rental[propertyType]" class="form-select" required>
                        <option value="" disabled selected>Select property type</option>
                        <option value="Hostel">Hostel</option>
                        <option value="PG">PG (Paying Guest)</option>
                        <option value="Single Room">Single Room</option>
                        <option value="1RK">1RK (Room Kitchen)</option>
                        <option value="1BHK">1BHK (Bedroom Hall Kitchen)</option>
                        <option value="2BHK">2BHK (Two Bedroom Hall Kitchen)</option>
                        <option value="3BHK">3BHK (Three Bedroom Hall Kitchen)</option>
                    </select>
                    <div class="invalid-feedback">Please select a property type</div>
                </div>

                <!-- Facilities -->
                <div class="mb-3">
                    <label for="facilities" class="form-label">Facilities:</label>
                    <input type="text" name="rental[facilities]" class="form-control" placeholder="Enter available facilities (e.g., Wi-Fi, Laundry)">
                </div>

                <!-- Photos -->
                <div class="mb-3">
                    <label for="photos" class="form-label">Photo URL:</label>
                    <input type="url" name="rental[photos]" class="form-control" placeholder="Enter the photo URL" required>
                    <div class="invalid-feedback">Please provide a photo URL</div>
                </div>

                <!-- Contact Information -->
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="name" class="form-label">Contact Name:</label>
                        <input type="text" name="rental[contact][name]" class="form-control" placeholder="Enter contact name" required>
                        <div class="invalid-feedback">Please provide a contact name</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="phone" class="form-label">Contact Phone:</label>
                        <input type="text" name="rental[contact][phone]" class="form-control" maxlength="10" pattern="\d{10}" placeholder="Enter 10-digit phone number" required>
                        <div class="invalid-feedback">Please provide a valid phone number</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="email" class="form-label">Contact Email:</label>
                        <input type="email" name="rental[contact][email]" class="form-control" placeholder="(optional)">
                    </div>
                </div>

                <!-- Submit Button -->
                <button class="btn btn-dark add-btn mb-3 mt-3">Add Rental</button>

            </form>
        </div>
    </div>
</body>
